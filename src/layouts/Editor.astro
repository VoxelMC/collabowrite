---
import EditorPane from '../components/qwik/EditorPane';

interface Props {
	state: 'editor' | 'renderer' | 'both';
	url: string;
}
const { state, url } = Astro.props;
---

{/* Editor Pane  */}
<div class="h-full w-full px-8 py-4 bg-base-100">
	<div class="p-4 bg-success rounded-t-lg">
		Send someone to <a
			target="_blank"
			class="link link-primary"
			href={import.meta.env.BASE_URL + 'labs/' + url}
			>{import.meta.env.BASE_URL}labs/{url}</a
		> to start CollaboWriting!
	</div>
	<EditorPane {url} />
</div>

