---
import CommonHead from '~/components/astro/CommonHead.astro';
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Write markdown collaboratively!"
        />
        <meta
            name="viewport"
            content="width=device-width"
        />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/favicon.svg"
        />
        <meta
            name="generator"
            content={Astro.generator}
        />
		<CommonHead />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>
